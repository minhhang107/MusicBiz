@model IEnumerable<S2022A6MHN.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Artist List";
    var userAccount = new S2022A6MHN.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Artist list</h2>

@if (userAccount.HasRoleClaim("Executive"))
{
    <p>
        @Html.ActionLink("Create new artist", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:150px">
                <img style="width:100%; object-fit:contain" src="@Html.DisplayFor(modelItem => item.UrlArtist)" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BirthOrStartDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
